@model List<RepInteractive>

@{ 
    Layout = "../Shared/_LayoutAdminLTE.cshtml";
}


<!-- 内容标题 -->
<section class="content-header">
    <h1>
        交互需求列表
        <small>产品管理</small>
    </h1>
    <!--  导航地图  -->
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="~/ProductInfo/Index"><i class="fa fa-dashboard"></i> 产品管理</a></li>
        <li class="active">交互需求</li>
    </ol>
</section>

<!-- 内容Panel -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        @*<div class="box-header with-border">
                <h3 class="box-title"></h3>
            </div>*@
        <div class="box-body">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <tr>
                    <td align="center">@Html.LabelFor(m => m[0].InteractiveName)</td>
                    <td align="center">@Html.LabelFor(m => m[0].Priority)</td>
                    <td align="center">@Html.LabelFor(m => m[0].CreateAt)</td>
                    <td align="center"><label>创建/修改人</label></td>
                    <td align="center"><label>操作</label></td>
                </tr>
                @foreach (var Interactives in Model)
                {
                    <tr>
                        <td align="center"><a href="@Url.Content("~/Interactive/Details/"+Interactives.InteractiveId)">@Html.DisplayFor(m => Interactives.InteractiveName)</a></td>
                        <td align="center"><a href="@Url.Content("~/Interactive/Details/"+Interactives.InteractiveId)">@Html.DisplayFor(m => Interactives.Priority)</a></td>
                        <td align="center"><a href="@Url.Content("~/Interactive/Details/"+Interactives.InteractiveId)">@Html.DisplayFor(m => Interactives.CreateAt)</a></td>
                        <td align="center"><a href="@Url.Content("~/Interactive/Details/"+Interactives.InteractiveId)">@Html.DisplayFor(m => Interactives.user.DisplayName)</a></td>
                        <td align="center">
                            <a href="@Url.Content("~/Interactive/Details/"+Interactives.InteractiveId)">详情</a> |
                            <a href="@Url.Content("~/Interactive/Edit/"+Interactives.InteractiveId)">编辑</a> |
                            <a href="@Url.Content("~/Interactive/Delete/"+Interactives.InteractiveId)">删除</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

</section>


