@model List<RepOther>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}

<!-- 内容标题 -->
<section class="content-header">
    <h1>
        交互需求列表
        <small>产品管理</small>
    </h1>
    <!--  导航地图  -->
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="~/ProductInfo/Index"><i class="fa fa-dashboard"></i> 产品管理</a></li>
        <li class="active">交互需求</li>
    </ol>
</section>

<!-- 内容Panel -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title"></h3>
            <div class="pull-left">
                <a class="btn btn-primary" href="~/RepOther/Create"><i class="fa fa-plus"></i> 创建需求</a>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <tr>
                    <td align="center">@Html.LabelFor(m => m[0].RepOtherName)</td>
                    <td align="center">@Html.LabelFor(m => m[0].Priority)</td>
                    <td align="center">@Html.LabelFor(m => m[0].CreateAt)</td>
                    <td align="center"><label>创建/修改人</label></td>
                    <td align="center"><label>操作</label></td>
                </tr>
                @foreach (var RepOthers in Model)
                {
                    <tr>
                        <td align="center"><a href="@Url.Content("~/RepOther/Details/"+RepOthers.RepOtherId)">@Html.DisplayFor(m => RepOthers.RepOtherName)</a></td>
                        <td align="center"><a href="@Url.Content("~/RepOther/Details/"+RepOthers.RepOtherId)">@Html.DisplayFor(m => RepOthers.Priority)</a></td>
                        <td align="center"><a href="@Url.Content("~/RepOther/Details/"+RepOthers.RepOtherId)">@Html.DisplayFor(m => RepOthers.CreateAt)</a></td>
                        <td align="center"><a href="@Url.Content("~/RepOther/Details/"+RepOthers.RepOtherId)">@Html.DisplayFor(m => RepOthers.user.DisplayName)</a></td>
                        <td align="center">
                            <a href="@Url.Content("~/RepOther/Details/"+RepOthers.RepOtherId)">详情</a> |
                            <a href="@Url.Content("~/RepOther/Edit/"+RepOthers.RepOtherId)">编辑</a> |
                            <a href="@Url.Content("~/RepOther/Delete/"+RepOthers.RepOtherId)">删除</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

</section>
