@model List<ProductInfo>

@{
    ViewBag.Title = "产品管理列表";
    Layout = "../Shared/_LayoutAdminLTE.cshtml";
}
<!-- 内容标题 -->
<section class="content-header">
    <h1>
        产品列表
        <small>产品管理</small>
    </h1>
    <!--  导航地图  -->
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">产品管理</li>
    </ol>
</section>

<!-- 内容Panel -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            @*<h3 class="box-title">创建新产品</h3>*@
            <div class="pull-left">
                <a class="btn btn-primary" href="~/ProductInfo/Create"><i class="fa fa-plus"></i> 创建需求</a>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <tr>
                    <td align="center">@Html.LabelFor(m => m[0].ProductName)</td>
                    <td align="center">@Html.LabelFor(m => m[0].CreateAt)</td>
                    <td align="center"><label>创建/修改人</label></td>
                    <td align="center"><label>操作</label></td>
                </tr>
                @foreach (var Product in Model)
                {
                    <tr>
                        <td align="center"><a href="@Url.Content("~/ProductInfo/Details/"+Product.ProductId)">@Html.DisplayFor(m => Product.ProductName)</a></td>
                        <td align="center"><a href="@Url.Content("~/ProductInfo/Details/"+Product.ProductId)">@Html.DisplayFor(m => Product.CreateAt)</a></td>
                        <td align="center"><a href="@Url.Content("~/ProductInfo/Details/"+Product.ProductId)">@Html.DisplayFor(m => Product.user.DisplayName)</a></td>
                        <td align="center">
                            <a href="@Url.Content("~/ProductInfo/Document/"+Product.ProductId)">文档</a> |
                            <a href="@Url.Content("~/ProductInfo/Details/"+Product.ProductId)">管理</a> |
                            <a href="@Url.Content("~/ProductInfo/Edit/"+Product.ProductId)">编辑</a> |
                            <a href="@Url.Content("~/ProductInfo/Delete/"+Product.ProductId)">删除</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

</section>