@model List<HelpDoc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}

<!-- 内容标题 -->
<section class="content-header">
    <h1>
        客服文档
        <small>列表</small>
    </h1>
    <!--  导航地图  -->
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">客服文档</li>
    </ol>
</section>

<!-- 内容Panel -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title"></h3>
            <div class="pull-left">
                <a class="btn btn-primary" href="~/HelpDoc/Create"><i class="fa fa-plus"></i> 创建文档</a>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <tr>
                    <td align="center">@Html.LabelFor(m => m[0].HelpDocName)</td>
                    <td align="center">@Html.LabelFor(m => m[0].CreateAt)</td>
                    <td align="center"><label>创建/修改人</label></td>
                    <td align="center"><label>操作</label></td>
                </tr>
                @foreach (var helpDocs in Model)
                {
                    <tr>
                        <td align="center"><a href="@Url.Content("~/HelpDoc/Details/"+helpDocs.HelpDocId)">@Html.DisplayFor(m => helpDocs.HelpDocName)</a></td>
                        <td align="center"><a href="@Url.Content("~/HelpDoc/Details/"+helpDocs.HelpDocId)">@Html.DisplayFor(m => helpDocs.CreateAt)</a></td>
                        <td align="center"><a href="@Url.Content("~/HelpDoc/Details/"+helpDocs.HelpDocId)">@Html.DisplayFor(m => helpDocs.user.DisplayName)</a></td>
                        <td align="center">
                            <a href="@Url.Content("~/HelpDoc/Details/"+helpDocs.HelpDocId)">详情</a> |
                            <a href="@Url.Content("~/HelpDoc/Edit/"+helpDocs.HelpDocId)">编辑</a> |
                            <a href="@Url.Content("~/HelpDoc/Delete/"+helpDocs.HelpDocId)">删除</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

</section>

