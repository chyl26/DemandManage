@model LogicModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- 内容标题 -->
    <section class="content-header">
        <h1>
            @Model.LogicName
            <small>产品逻辑说明</small>
        </h1>
        <!--  导航地图  -->
        <ol class="breadcrumb">
            <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="~/ProductInfo/Index"><i class="fa fa-dashboard"></i> 产品管理</a></li>
            <li class="active">产品逻辑说明</li>
        </ol>
    </section>

    <!-- 内容Panel -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">@Model.ProductId</h3>
            </div>
            <div class="box-body">
                <!--  这是写入要展示的内容开始  -->
                <div>
                    <!--详情标题-->
                    <h3>
                        @Html.DisplayFor(m => m.LogicName)
                    </h3>
                    <p classblog-post-meta">@Model.CreateAt &nbsp&nbspby:<a href="#">@Model.DisplayName</a></p>
                    <div>
                        @Html.LabelFor(m => m.LogicDescribe)
                        @Html.Raw(HttpUtility.HtmlDecode(@Model.LogicDescribe))
                    </div>

                    @if (Model.Revision != null)
                    {
                        <hr />
                        @Html.LabelFor(m => m.Revision)
                        <p classblog-post-meta">@Model.UpdateAt &nbsp&nbspby:@Model.DisplayName</p>
                        @Html.Raw(HttpUtility.HtmlDecode(@Model.Revision))
                    }

                </div>
                <!--  这是写入要展示的内容结束  -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
}